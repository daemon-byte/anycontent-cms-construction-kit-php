<div class="modal-dialog" style="width:900px">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">Import Content

            </h4>
        </div>


        <div class="modal-body">

            <div class="row">
                <div class="col-xs-12">

                    <form role="form" method="post" name="form_import" action="xxx" id="form_import"
                          class="form-horizontal">
                        <fieldset>
                            <legend>File</legend>
                            <div class="form-group">
                                <label class="col-md-3 control-label">File</label>

                                <div class="col-md-6"><br/>
                                    <input type="file"/>
                                </div>
                            </div>

                            {% if app.context.canChangeWorkspace %}
                                <legend>Workspace</legend>

                                <div class="form-group">
                                    <label class="col-md-3 control-label">Target </label>

                                    <div class="col-md-6">
                                        <select name="target_workspace" class="form-control">
                                            {% for key,value in workspaces.list %}
                                                <option value="{{ key }}"{% if key == workspaces.current %} selected="selected"{% endif %}>{{ value }}</option>
                                            {% endfor %}
                                        </select>
                                    </div>
                                </div>
                            {% endif %}

                            {% if app.context.canChangeLanguage %}
                                <legend>Language</legend>


                                <div class="form-group">
                                    <label class="col-md-3 control-label">Target</label>

                                    <div class="col-md-6">
                                        <select id="selectbasic" name="target_language" class="form-control">
                                            {% for key,value in languages.list %}
                                                <option value="{{ key }}"{% if key == languages.current %} selected="selected"{% endif %}>{{ value }}</option>
                                            {% endfor %}
                                        </select>
                                    </div>
                                </div>
                            {% endif %}

                            <legend>Format</legend>
                            <div class="form-group">
                                <label class="col-md-3 control-label">Source</label>

                                <div class="col-md-6">
                                    <select id="selectbasic" name="target_language" class="form-control">

                                        <option value="x" selected="selected">Excel (2007)</option>
                                        <option value="x">JSON</option>

                                    </select>
                                </div>
                            </div>

                            <legend>Options</legend>
                            <div class="form-group">
                                <label class="col-md-3 control-label">Truncate</label>

                                <div class="col-md-6">
                                    <input type="checkbox"> Delete all existing records upon import
                                </div>

                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label">ID Management</label>


                                <div class="col-md-6">
                                    <input type="checkbox"> Generate new ID for <strong>every</strong> record
                                </div>
                            </div>
                        </fieldset>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Updates</label>


                            <div class="col-md-9">
                                <input type="checkbox"> Skip records having a newer revision (revision number must be
                                provided)
                            </div>
                        </div>
                        </fieldset>
                    </form>
                    <br/>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="modal_button_transfer"
                        onclick="$('#form_import').submit();">Import
                </button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
            </div>

        </div>

    </div>
</div>