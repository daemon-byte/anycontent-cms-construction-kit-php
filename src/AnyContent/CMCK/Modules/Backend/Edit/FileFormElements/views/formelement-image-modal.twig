<div class="modal-dialog" style="width:900px">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">Please Choose File</h4>
        </div>
        <div class="modal-body">
            <div class="row">
                <iframe src="{{ url_file_select }}" width="100%" height="600px" style="border:0px" id="modal-iframe">

                </iframe>
            </div>
        </div>
        <div class="modal-footer">
            <!--<button type="button" class="btn btn-primary" id="modal_button_select">Select</button>-->
            <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        </div>
    </div>
    <script>
        // create available in global scope, which shall retrieve the files selection path
        var cmck_fe_files_input;

        // link this variable to the corresponding input field upon loading of the modal
        var cmck_fe_files_modal_shown = function (options) {
            cmck_fe_files_input = options.input;
        };

        // create method in global scope for setting the path by accessing the global variable.
        // This method can get called from the iframe displaying the files
        var cmck_fe_files_modal_select = function (value) {
            cmck_fe_files_input.val(value);
            $('#modal_edit').modal('hide');
        };
    </script>
</div>

