{% extends "formelement-default.twig" %}

{% block input %}
    <div class="col-xs-6">
        <div class="input-group">

            {% block icon %}
                <span class="input-group-addon"><span class="glyphicon glyphicon-file"></span></span>
            {% endblock %}

            <input type="text" class="form-control" id="{{ id }}" name="{{ name }}"
                   placeholder="{{ definition.placeholder }}" value="{{ value }}">

        </div>


    </div>
    <div class="col-xs-4">


        <a data-input="#{{ id }}" href="{{ url_modal }}" name="{{ name }}"
           class="btn btn-default formelement-file-modal-button"><span
                    class="glyphicon glyphicon-folder-open"></span> &nbsp;Select</a>


        <a data-input="#{{ id }}" href="{{ url_view }}" name="{{ name }}"
           class="btn btn-default formelement-file-modal-button disabled"><span
                    class="glyphicon glyphicon-zoom-in"></span> &nbsp;View</a>

        <a data-input="#{{ id }}" href="{{ url_download }}" name="{{ name }}"
           class="btn btn-default formelement-file-modal-button disabled"><span
                    class="glyphicon glyphicon-cloud-download"></span> &nbsp;Download</a>

    </div>
{% endblock %}