{% extends "formelement-textfield.twig" %}

{% block input %}
    <div class="{{ class.size }}">

        <textarea id="{{ id }}" name="{{ name }}" placeholder="{{ definition.placeholder }}" class="form-control formelement-tooltip"
                  rows="{{ definition.rows }}" data-toggle="tooltip" data-trigger="hover" data-placement="right" data-content="{{ definition.hint }}">{{ value }}</textarea>

    </div>
{% endblock %}