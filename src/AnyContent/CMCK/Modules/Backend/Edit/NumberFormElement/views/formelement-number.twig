{% extends "formelement-default.twig" %}

{% block input %}
    <div class="col-xs-2">
        <div class="input-group">
            {% if leftAddOn %}
                <span class="input-group-addon">{{ leftAddOn }}</span>
            {% endif %}
            <input type="text" class="form-control" id="{{ id }}" name="{{ name }}"
                   placeholder="{{ definition.placeholder }}" value="{{ value }}">
            {% if rightAddOn %}
                <span class="input-group-addon">{{ rightAddOn }}</span>
            {% endif %}
        </div>
    </div>
{% endblock %}