{% extends "layout-plain.twig" %}

{% block content %}
    <div class="container">

    {% for folder in folders %}
        <div class="row">

            <ul class="nav nav-tabs">
                {% if loop.first %}
                    <li{% if root %} class="active"{% endif %}><a href="{{ links.files }}"><span
                                    class="glyphicon glyphicon-home"></span></a></li>
                {% endif %}
                {% for item in folder %}

                    <li class="{{ item.class }}"><a href="{{ item.url }}">{{ item.name }}</a></li>
                {% endfor %}
            </ul>
            <br/>
        </div>
    {% endfor %}


    <div class="row">
        <br/>
        {% for file in files %}
            {% include "files-list-modal-item.twig" %}
        {% endfor %}
    </div>

           </div>

{% endblock %}




