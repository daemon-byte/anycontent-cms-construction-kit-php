{% extends "layout-default.twig" %}

{% block content %}
    <div class="row">
        <ol class="breadcrumb">
            <li><a href="/">Home</a></li>
            <li><a href="{{ links.repository }}">{{ repository.repositoryName }}</a></li>
        </ol>

        <h2 title="{{ definition.name }}"><small><span class="glyphicon glyphicon-wrench"></span></small> {% if definition.title %}{{ definition.title }}{% else %}{{ definition.name }}{% endif %}</h2>

    </div>

    <div class="row">
        <form class="well" role="form" method="post" name="form_edit" action="" id="form_edit" data-event-countdown="0">

            <fieldset>
                {{ form | raw }}
            </fieldset>


            <hr/>
            <div class="controls">
                <div class="btn-toolbar">

                    <span class="btn-group" id="form_edit_button_save">
                        <input type="submit" class="btn btn-primary" href="#" value="Save"
                               id="form_edit_button_submit"/>

                    </span>


                </div>

            </div>

            <input type="hidden" name="$hidden[workspace]" value="{{ workspaces.current }}">
            <input type="hidden" name="$hidden[language]" value="{{ languages.current }}">
        </form>

    </div>

    {% include "files-modal-file-zoom.twig" %}
{% endblock %}