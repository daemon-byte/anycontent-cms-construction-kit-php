<div class="form-group formelement-{{ definition.FormElementType }}">
    <div class="row">
        {% block label %}
            <div class="col-xs-8">
                <label for="{{ id }}">{{ definition.label }}{% if definition.isMandatory == true %}*{% endif %}</label>
            </div>
        {% endblock %}
    </div>
    <div class="row">
        {% block input %}
            <div class="col-xs-6">
                <textarea id="{{ id }}" name="{{ name }}" placeholder="{{ definition.placeholder }}"
                          class="form-control"
                          rows="3">{{ value }}</textarea>
            </div>
        {% endblock %}
    </div>
</div>
